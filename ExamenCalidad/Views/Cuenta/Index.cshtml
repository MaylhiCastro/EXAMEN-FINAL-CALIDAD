@model IEnumerable<ExamenCalidad.Models.Cuenta>
@{ ViewData["Title"] = "Lista de Cuentas"; }

<div>
    <p>Soles: S/ @ViewBag.Soles</p>
    <p>Dolares: $. @ViewBag.Dolares</p>
    <p>Total: S/ @ViewBag.Total</p>
</div>

<div class="container">
    <div class="row ">
        <div class="col-sm-2">
            <a class="btn btn-success d-block" id="agregarNuevaCuenta" asp-action="create" asp-controller="Cuenta">Crear Cuenta</a>
        </div>
    </div>
    <br />
    <div class="row mt-6 ">
        <div class="col-sm-12">
            <table class="table" id="datatable">
                <thead>
                    <tr>
                        <td>Nombre</td>
                        <td>Categoria</td>
                        <td>Moneda</td>
                        <td>Monto</td>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Categoria</td>
                        <td>@item.Moneda</td>
                        <td>@item.SaldaInicisl</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>